<tr>
  <td>   
    <div id="train_name_<%= train.id %>">
      <%= train.name %>      
    </div>
    <%= render 'inline_form', train: train, hidden: true %>
  </td>
  <td>
    <div id="train_number_<%= train.id %>">
      <%= train.number %>
    </div>
  </td>
  <td>
    <div id="train_route_<%= train.id %>">
      <% if train.route.present? %>
        <%= train.route.name %>
      <% else %>
        Undefined
      <% end %>
    </div>
  </td>
  <td><%= link_to 'Show', admin_train_path(train) %></td>
  <td><%= link_to 'Edit', '', class: 'edit_train', data: { train_id: train.id } %></td>
  <td><%= link_to 'Destroy', [:admin, train], method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>