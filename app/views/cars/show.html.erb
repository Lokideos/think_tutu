<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @car.number %>
</p>
  
<p>
  <strong>Top Seats:</strong>
  <%= @car.top_seats %>
</p>

<p>
  <strong>Bottom Seats:</strong>
  <%= @car.bottom_seats %>
</p>

<% if @car.train.present? %>
  <p>
    <strong>Train:</strong>
      <%= @car.train.name %>    
  </p>

  <p>
    <strong>Position in train:</strong>
      <%= @car.number_in_train %>  
  </p>
<% else %>
  <p>
    <strong>Train:</strong>
      Undefined
  </p>

  <p>
    <strong>Position in train:</strong>
      -
  </p>
<% end %>



<%= link_to 'Edit', edit_car_path(@car) %> |
<%= link_to 'Back', cars_path %>
