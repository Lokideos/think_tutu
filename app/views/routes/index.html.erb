<h1>Routes listing</h1>

<table>

  <tr>
    <th>Name</th>
  </tr>
  
  <% @routes.each do |route| %>
    <tr>
      <td><%= route.name %></td>      
      <td><%= link_to 'Show', route %></td>
      <td><%= link_to 'Edit', edit_route_path(route) %></td>
      <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: "Are you sure?" } %>
    </tr>
  <% end %>
</table>

<%= link_to 'New Route', new_route_path %>