<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @train.name %>
</p>

<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>

<p>
  <strong>Current Route:</strong>
  <% if @train.route.present? %>
    <%= @train.route.name %>
  <% else %>
    Undefined
  <% end %>
</p>

<p>
  <strong>Cattle Cars:</strong>
  <%= @train.cars_quantity_by_type("Cattle") %>;
