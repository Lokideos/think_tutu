  <strong>Cars by position in train</strong>
  <ul>
    <% @train.sorted_cars.each do |car| %>    
      <li><%= car.number_in_train %> - <%= link_to "Car number #{car.number}", car_path(car) %></li>
    <% end %>
  </ul>
</p>



